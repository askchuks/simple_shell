#include Alpha.h 
/**
* writing a function for users
* 
*
*/
void read.command (char *command, size_t size);
{
If (fgets (command, size, stdin) == NULL)
If (feof (stdin))
{
self_printf ("\n");
exit (EXIT_FAILURE);
}
else
{
self_printf ("Error while reading input. \n");
exit (EXIT_FAILURE);
}
command [strcspn (command, "\n"] = '\0';
}
